pipeline {
    agent { label 'agent1' }

    tools {
        maven 'Maven 3.8.1'  // Ensure this matches your Maven tool config
    }

    environment {
        SLACK_WEBHOOK_URL = credentials('slack-webhook')  // Make sure this secret text credential exists
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/devkelzs/spring-petclinic.git'
            }
        }

        stage('OWASP Dependency Check') {
            steps {
                dependencyCheck odcInstallation: 'Dependency-Check-CLI', additionalArguments: '--format HTML --failOnCVSS 7'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
    }

    post {
        success {
            sh """
                curl -X POST -H 'Content-type: application/json' \
                --data '{"text":"✅ Build succeeded on agent"}' ${env.SLACK_WEBHOOK_URL}
            """
        }
        failure {
            sh """
                curl -X POST -H 'Content-type: application/json' \
                --data '{"text":"❌ Build failed on agent"}' ${env.SLACK_WEBHOOK_URL}
            """
        }
    }
}
